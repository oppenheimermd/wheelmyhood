@using WheelMyHood.Models
@{
    ViewData["Title"] = "Home page";
}

<!-- start: uk-section-default -->
<div class="uk-section-default uk-light">
    <div style="background-image: url(/images/tmp/demo-hero-1.jpg);" 
        class="uk-background-norepeat uk-background-cover uk-background-center-center uk-section uk-section-xlarge uk-flex uk-flex-middle" uk-parallax="bgy: -200,100">
        <div class="uk-width-1-1">
            <div class="uk-container uk-container-large">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid="">
                    <div class="uk-width-1-1@m uk-first-column">
                        <h2 class="uk-margin-large uk-text-center uk-heading-primary" uk-parallax="y:0,60;opacity:1;easing:0.7;viewport:0.95;media:@@m">
                            Wheel the world
                        </h2>
                        <div class="uk-margin uk-text-center">
                            <a class="uk-button uk-button-secondary uk-button-large" href="#cities" uk-scroll>
                                Explore a city                
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: uk-section-default -->



<!-- start: uk-section-default -->
<div class="uk-section-default" uk-scrollspy="cls:uk-animation-fade">
    <!-- start: uk-background-norepeat uk-background-bottom-right uk-section uk-section -->
    <div style="background-image: url(/images/tmp/home-intro-bg.svg);"
         class="uk-background-norepeat uk-background-bottom-right uk-section uk-section">
        <!-- start: uk-container -->
        <div class="uk-container">
            <div class="uk-grid-large uk-grid-margin-large uk-grid" uk-grid>
                <div class="uk-width-expand@m uk-first-column">
                    <h2 class="uk-width-xlarge uk-heading-primary uk-scrollspy-inview uk-animation-fade" uk-scrollspy-class="" style="">
                        Welcome <br class="uk-visible@s"> to
                        <strong class="uk-heading-divider"><br />WheelMyHood</strong>
                    </h2>
                </div>

                <div class="uk-width-expand@m">
                    <div class="uk-margin-medium uk-text-lead" uk-scrollspy="cls:uk-animation-fade">
                        Wheel my <em>'hood'</em> is your curated a list of the worlds best neighbourhoods curated by fellow 
                        wheelchair users around the world who share their favorite local hangouts so you can experience any city 
                        like a local.
                    </div>
                    <div class="uk-margin" uk-scrollspy="cls:uk-animation-fade">
                        <img width="230" height="70" src="/images/tmp/home-signature.svg">
                    </div>
                </div>
            </div>
        </div>
        <!-- end: uk-container -->
    </div>
    <!-- end: uk-background-norepeat uk-background-bottom-right uk-section uk-section -->
</div>
<!-- end: uk-section-default -->


<!-- start: uk-section-default -->
<div class="uk-section-large" id="cities">

    <!-- start: uk-container -->
    <div class="uk-container">

        <div uk-filter="target: .js-filter">

            <!-- Filter controls -->
            <ul class="uk-subnav uk-subnav-pill">
                <li><a href="#"></a></li>
                <li uk-filter-control><a href="#">All</a></li>
                <li uk-filter-control="[data-category='asia'"><a href="#">Asia</a></li>
                <li uk-filter-control="[data-category='europe'"><a href="#">Europe</a></li>
                <li uk-filter-control="[data-category='north-america'"><a href="#">North America</a></li>
                <li uk-filter-control="[data-category='south-america'"><a href="#">South America</a></li>
                <li uk-filter-control="[data-category='oceania'"><a href="#">Oceania</a></li>
            </ul>

            <!-- Layout items -->
            <ul class="js-filter js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>

                @foreach (var item in ((IEnumerable<CityTmp>)ViewData["Cities"]))
                {
                    var thisRegionId = "region-id" + " region " + item.Region;
                    <li class="@thisRegionId" data-category="@item.Region">
                        <div class="uk-card uk-card-default uk-card-hover" uk-scrollspy="cls:uk-animation-slide-bottom-medium">
                            <a href="#" class="uk-position-cover uk-position-z-index uk-margin-remove-adjacent">
                            </a>
                            <div class="uk-card-media-top">
                                <img data-src="/images/tmp/extensions-gallery-06-2b78ead8.jpg" data-srcset="/images/tmp/extensions-gallery-06-2b78ead8.jpg 600w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 768w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 1024w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 1200w" data-sizes="(min-width: 600px) 600px" data-width="1220" data-height="690" class="el-image" alt="" uk-img="" src="/images/tmp/extensions-gallery-06-2b78ead8.jpg" sizes="(min-width: 600px) 600px" srcset="/images/tmp/extensions-gallery-06-2b78ead8.jpg 600w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 768w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 1024w, /images/tmp/extensions-gallery-06-2b78ead8.jpg 1200w">
                            </div>
                            <div class="uk-card-body">
                                <h3 class="uk-margin uk-h4 uk-margin-remove-adjacent uk-margin-small-bottom">
                                    @item.City
                                </h3>
                                <div class="uk-margin uk-text-meta">
                                    @item.Country
                                </div>
                            </div>
                        </div>
                    </li>
                }

            </ul>

        </div>

    </div>
    <!-- end: uk-container -->
</div>
<!-- end: uk-section-default -->


