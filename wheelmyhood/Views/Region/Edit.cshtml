@model WheelMyHood.Models.Region

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutConsole.cshtml";
}
@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li><a asp-action="Index">Home</a></li>
        <li><span href="">Edit Region</span></li>
    </ul>
}


<form asp-action="Edit">

    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Edit Region</legend>
        <div asp-validation-summary="ModelOnly" class="uk-form-danger"></div>
        <input type="hidden" asp-for="RegionCode" />

        <div class="uk-margin">
            <input asp-for="ContinentName" class="uk-input" placeholder="Continent name" />
            <span asp-validation-for="ContinentName" class="uk-form-danger"></span>
        </div>

        <div class="uk-margin">
            <input type="submit" value="Save" class="uk-button uk-button-primary" />
        </div>
    </fieldset>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

